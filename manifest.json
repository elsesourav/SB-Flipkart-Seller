{
   "name": "Seller Automation ES",
   "version": "1.4.1",
   "description": "A tool for online sellers, automating listings and mapping to streamline e-commerce operations. (Copyright SouravBarui2025).",
   "manifest_version": 3,
   "options_page": "./option/options.html",
   "permissions": [
      "scripting",
      "storage",
      "tabs",
      "activeTab",
      "management",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback",
      "webRequest",
      "declarativeNetRequestWithHostAccess",
      "unlimitedStorage",
      "offscreen"
   ],
   "host_permissions": ["<all_urls>"],
   "background": {
      "service_worker": "./backgroundScripts/background.js"
   },
   "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'",
      "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
   },
   "content_scripts": [
      {
         "matches": ["<all_urls>"],
         "js": ["./utils.js", "./contentScripts/html2canvas.js", "./querySelector.js", "./contentScripts/style.js", "./contentScripts/nano.fun.js", "./contentScripts/small.fun.js", "./contentScripts/content.js"]
      }
   ],
   "web_accessible_resources": [
      {
         "resources": ["assets/*", "css/*"],
         "matches": ["<all_urls>"]
      }
   ],
   "action": {
      "default_icon": {
         "16": "assets/icons/icon.png",
         "24": "assets/icons/icon.png",
         "32": "assets/icons/icon.png"
      },
      "default_title": "Testing",
      "default_popup": "./popup/popup.html"
   },
   "icons": {
      "16": "assets/icons/icon.png",
      "48": "assets/icons/icon.png",
      "128": "assets/icons/icon.png"
   }
}
